baseWidth = 840px
appWidth = 260px

.base
  background-image: url('../images/light.png')
  background-color: #f1eee4
  padding-bottom: 60px

  .base-head
    background: url('../images/neck.png') repeat-x
    margin-bottom: 60px
    height: 9px

  .base-apps-list
    margin: 0 auto
    padding: 0
    width: baseWidth
    list-style-type: none

  .base-app
    float: left
    display: block
    width: appWidth
    margin-right: ((baseWidth - 3*appWidth) / 2)

    .base-app-title
      font-family: Rockwell, 'Courier New', Courier, Georgia, Times, 'Times New Roman', serif
      font-size: 31px
      font-weight: normal
      color: #46403e

    .base-app-description
      font-family: Verdana, serif
      font-size: 12px
      color: #47403f
      width: 240px
      margin-left: 10px

  .last
    margin-right: 0


.clearfix:after
  display: block
  clear: both
  visibility: hidden
  line-height: 0
  height: 0

html[xmlns] .clearfix
  display: block

* html .clearfix
  height: 1%