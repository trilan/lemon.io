baseWidth = 840px
appWidth = 260px

.clearfix:after
  display: block
  clear: both
  visibility: hidden
  line-height: 0
  height: 0

html[xmlns] .clearfix
  display: block

* html .clearfix
  height: 1%


.base
  background-color: #f1eee4
  padding-bottom: 60px

  .base-head
    background: url('../images/neck.png') repeat-x
    margin-bottom: 60px
    height: 9px

  ul
    margin: 0 auto
    padding: 0
    width: baseWidth
    list-style-type: none

  .base-app
    float: left
    display: block
    width: appWidth
    margin-right: ((baseWidth - 3*appWidth) / 2)

    .base-app-title
      font-family: Rockwell, 'Courier New', Courier, Georgia, Times, 'Times New Roman', serif
      font-size: 31px
      color: #46403e

    .base-app-description
      font-family: Verdana, serif
      font-size: 12px
      color: #47403f
      width: 240px
      margin-left: 10px

  .last
    margin-right: 0

  .icon
    display: inline-block
    width: 53px
    height: 53px
    vertical-align: text-top
    background-position: 0 0
    background-repeat: no-repeat

  .icon-sitemap
    background-image: url('../images/sitemap.png')

  .icon-robots
    background-image: url('../images/robots.png')

  .icon-pages
    background-image: url('../images/pages.png')

  .icon-publications
    background-image: url('../images/publications.png')

  .icon-admin
    background-image: url('../images/admin.png')

  .icon-filebrowser
    background-image: url('../images/filebrowser.png')

  .icon-metatags
    background-image: url('../images/metatags.png')

  .icon-dashboard
    background-image: url('../images/dashboard.png')
